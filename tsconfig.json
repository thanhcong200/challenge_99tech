{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ESNext",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": [
            "@types",
            "./node_modules/@types"
        ],
        "experimentalDecorators": true, 
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"
    ]
}
